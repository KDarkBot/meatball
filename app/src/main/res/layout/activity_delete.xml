<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:material="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#01204E">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="30dp"
        android:background="@drawable/nav_bg"
        app:itemRippleColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu"
        app:itemTextColor="@color/black"
        app:itemIconTint="@color/black">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="30sp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/nav_bg"
        app:layout_constraintBottom_toTopOf="@+id/bnav_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <RadioButton
            android:textColor="@color/black"
            android:fontFamily="@font/okkorea"
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월"
            android:checked="true"/>
        <RadioButton
            android:textColor="@color/black"
            android:fontFamily="@font/okkorea"
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="화"/>
        <RadioButton
            android:textColor="@color/black"
            android:fontFamily="@font/okkorea"
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수"/>
        <RadioButton
            android:textColor="@color/black"
            android:fontFamily="@font/okkorea"
            android:id="@+id/radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목" />

        <RadioButton
            android:textColor="@color/black"
            android:fontFamily="@font/okkorea"
            android:id="@+id/radio5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="금"/>
        <RadioButton
            android:textColor="@color/black"
            android:fontFamily="@font/okkorea"
            android:id="@+id/radio6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="토"/>
        <RadioButton
            android:textColor="@color/black"
            android:fontFamily="@font/okkorea"
            android:id="@+id/radio7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월"/>

    </RadioGroup>


    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="400sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.217" />

    <EditText
        android:id="@+id/editCategoryToDelete"
        android:layout_width="217dp"
        android:layout_height="47dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/nav_bg2"
        android:fontFamily="@font/okkorea"
        android:hint="시간"
        android:inputType="number"
        android:maxLength="2"

        android:maxLines="1"
        android:padding="5sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/savegoto"
        app:layout_constraintStart_toEndOf="@+id/deleteButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/deleteButton"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_marginStart="28dp"
        android:background="@drawable/nav_bg2"
        android:fontFamily="@font/okkorea"
        android:text="지우기"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pieChart"
        app:layout_constraintVertical_bias="0.126" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/deleteAllButton"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_marginEnd="248dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/nav_bg2"
        android:fontFamily="@font/okkorea"
        android:text="전체 지우기"


        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"

        app:layout_constraintEnd_toEndOf="@+id/radioGroup" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/savegoto"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="152dp"
        android:background="@drawable/nav_bg2"
        android:fontFamily="@font/okkorea"
        android:text="저장하기"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/pieChart"
        app:layout_constraintVertical_bias="0.657" />
</androidx.constraintlayout.widget.ConstraintLayout>
